<!-- pos_custom_button/static/src/xml/custom_button.xml -->
<templates id="template" xml:space="preserve">
  <t t-name="pos_custom.ControlButtons" t-inherit="point_of_sale.ControlButtons" t-inherit-mode="extension">
    <!-- هنا ممكن تستخدم نقطة موجودة بالفعل داخل DOM -->
    <xpath expr="//t[@t-if='props.showRemainingButtons']/div" position="inside">
      <button class="btn btn-light btn-lg flex-shrink-0 ms-auto"
              t-on-click="() => this.onClickMessage()">
        <i class="fa fa-star me-1" role="img" aria-label="Custom" title="Custom"/>Custom
      </button>
    </xpath>
  </t>
</templates>
